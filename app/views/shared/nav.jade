.navbar.navbar-default(role='navigation')
  .container-fluid
    .navbar-header
      button.navbar-toggle(data-toggle='collapse', data-target='#bs-navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/'): i.fa.fa-home &nbsp; Amazon

    .collapse.navbar-collapse#bs-navbar-collapse
      ul.nav.navbar-nav.navbar-right
        if user
          li: a(href='/products'): i.fa.fa-barcode &nbsp; Products
          li: a(href='/cart'): i.fa.fa-shopping-cart &nbsp; Cart
          li: a(href='/users/#{user._id}'): i.fa.fa-user &nbsp; My Profile
          li
            form.navbar-form(method='post', action='/logout')
              .form-group
                input(type='hidden', name='_method', value='delete')
                button.btn.btn-danger: i.fa.fa-times-circle &nbsp; #{user.email || user.username}
        else
          li: a(href='/register'): i.fa.fa-star &nbsp; Register
          li: a(href='/login'): i.fa.fa-user &nbsp; Login
          li: a(href='/auth/twitter'): i.fa.fa-twitter.fa-lg &nbsp; Twitter
          li: a(href='/auth/github'): i.fa.fa-github.fa-lg &nbsp; Github
          li: a(href='/auth/google'): i.fa.fa-google.fa-lg &nbsp; Google
          li: a(href='/auth/facebook'): i.fa.fa-facebook.fa-lg &nbsp; Facebook
          li: a(href='/auth/trello'): i.fa.fa-trello.fa-lg &nbsp; Trello

